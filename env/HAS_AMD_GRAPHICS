#!/bin/sh

set -eu

HAS_AMD_GRAPHICS=0
if lspci | grep 'VGA compatible controller' | grep -q AMD; then
    # 0a:00.0 VGA compatible controller: Advanced Micro Devices, Inc. [AMD/ATI] Navi 23 (rev c1)
    HAS_AMD_GRAPHICS=1
fi

if [ "${DEBUG}" != 0 ]; then
    echo "HAS_AMD_GRAPHICS=$HAS_AMD_GRAPHICS"
fi

export HAS_AMD_GRAPHICS
